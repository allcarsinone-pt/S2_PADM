<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditStandProfileActivity">

    <RelativeLayout
        android:id="@+id/EditStandProfile_toolbar_rl"
        android:paddingTop="@dimen/_30sp"
        android:paddingHorizontal="@dimen/_30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageButton
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/backbutton"
            android:id="@+id/EditStandProfile_backbutton_btn"
            android:background="@drawable/circle_button"
            android:layout_marginTop="20dp" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/logo_cropped" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_EditStandProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Stand Profile"
        app:layout_constraintTop_toBottomOf="@id/EditStandProfile_toolbar_rl"
        app:layout_constraintBottom_toTopOf="@id/iv_ProfilePhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserratromanmedium">
    </TextView>
    <ImageView
        android:id="@+id/iv_ProfilePhoto"
        app:layout_constraintTop_toBottomOf="@id/tv_EditStandProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_profile"
        android:background="@drawable/img"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/EditStandProfile_form_ll"
        app:layout_constraintTop_toBottomOf="@id/iv_ProfilePhoto"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/EditStandProfile_standname_tv"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="Stand"
            style="@style/txtMontserratromanregular14"/>

        <EditText
            android:background="@drawable/rectangle_bg_white_a700_border_gray_600_radius_10"
            android:hint="Stand Name"
            android:id="@+id/EditStandProfile_username_et"
            android:layout_marginBottom="18dp"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_14pxv"
            android:paddingEnd="@dimen/_25pxh"
            android:paddingStart="@dimen/_21pxh"
            android:paddingTop="@dimen/_14pxv"
            android:singleLine="true"

            android:textColorHint="@color/black_900_cc"
            style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>

        <TextView
            android:id="@+id/EditStandProfile_location_tv"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="Location"
            style="@style/txtMontserratromanregular14"/>

        <EditText
            android:background="@drawable/rectangle_bg_white_a700_border_gray_600_radius_10"
            android:layout_marginBottom="18dp"
            android:hint="Location data"
            android:id="@+id/EditStandProfile_location_et"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_14pxv"
            android:paddingEnd="@dimen/_25pxh"
            android:paddingStart="@dimen/_21pxh"
            android:paddingTop="@dimen/_14pxv"
            android:singleLine="true"

            android:textColorHint="@color/black_900_cc"
            style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>

        <TextView
            android:id="@+id/EditStandProfile_phone_tv"

            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="Phone"
            style="@style/txtMontserratromanregular14"/>

        <EditText
            android:background="@drawable/rectangle_bg_white_a700_border_gray_600_radius_10"
            android:layout_marginBottom="18dp"
            android:hint="253345678"
            android:id="@+id/EditStandProfile_phone_et"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_14pxv"
            android:paddingEnd="@dimen/_25pxh"
            android:paddingStart="@dimen/_21pxh"
            android:paddingTop="@dimen/_14pxv"
            android:singleLine="true"

            android:textColorHint="@color/black_900_cc"
            style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>

        <TextView
            android:id="@+id/EditStandProfile_mobilephone_tv"

            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="Mobile Phone"
            style="@style/txtMontserratromanregular14"/>

        <EditText
            android:background="@drawable/rectangle_bg_white_a700_border_gray_600_radius_10"
            android:layout_marginBottom="18dp"
            android:id="@+id/EditStandProfile_mobilephone_et"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_14pxv"
            android:paddingEnd="@dimen/_25pxh"
            android:paddingStart="@dimen/_21pxh"
            android:paddingTop="@dimen/_14pxv"
            android:singleLine="true"
            tools:text="912345678"
            android:textColorHint="@color/black_900_cc"
            style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>

        <TextView
            android:id="@+id/EditStandProfile_schedule_tv"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="Schedule"
            style="@style/txtMontserratromanregular14"/>

        <EditText
            android:background="@drawable/rectangle_bg_white_a700_border_gray_600_radius_10"
            android:layout_marginBottom="18dp"
            android:id="@+id/EditStandProfile_schedule_et"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_14pxv"
            android:paddingEnd="@dimen/_25pxh"
            android:paddingStart="@dimen/_21pxh"
            android:paddingTop="@dimen/_14pxv"
            android:singleLine="true"
            tools:text="9am to 5pm"
            android:textColorHint="@color/black_900_cc"
            style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>

        <androidx.appcompat.widget.AppCompatButton
            android:gravity="center"
            android:id="@+id/EditStandProfile_edit_btn"
            android:layout_marginHorizontal="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_18pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_18pxv"
            android:singleLine="true"
            android:text="Change Data"
            style="@style/btnSolidRounded"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>