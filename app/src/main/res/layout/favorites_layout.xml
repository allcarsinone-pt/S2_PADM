<androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/favorites1_cv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:elevation="1dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
           >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/favorites1_iv"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ferrari"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/favorites1_iv"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/favoritesLayout_vehicleName_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Ferrari 458 Italia"
                        android:textStyle="bold"
                        android:textColor="@color/darkBlue"
                        android:fontFamily="@font/montserratromanmedium"
                        />
                    <TextView
                        android:id="@+id/favoritesLayout_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="1dp"
                        android:text="100.000â‚¬"
                        android:textStyle="bold"
                        android:textColor="@color/darkBlue"
                        android:fontFamily="@font/montserratromanmedium"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="20dp"
                        android:layout_marginStart="10dp"
                        android:paddingTop="20dp">
                        <TextView
                            android:id="@+id/location_fav1_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Porto"
                            android:textColor="@color/darkBlue"
                            android:drawableLeft="@drawable/locationdark"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/montserratromanlight"
                            />
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cart"
                            android:background="@android:color/transparent"
                            />
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/heart_filled"
                            android:background="@android:color/transparent"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
