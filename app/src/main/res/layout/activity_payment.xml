<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/generalBack"
    android:orientation="vertical"
    tools:context=".PaymentActivity">

    <RelativeLayout
        android:id="@+id/PaymentHeader_LAY"
        android:layout_marginTop="@dimen/_20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageButton
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/backbutton"
            android:id="@+id/editProfile_backbutton_btn"
            android:background="@drawable/circle_button"
            android:layout_margin="20dp" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/logo_cropped" />
    </RelativeLayout>

    <TextView
        android:id="@+id/PaymentTitle_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/PaymentHeader_LAY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        style="@style/txtRed14"
        android:textStyle = "bold"
        android:text="@string/enter_your_payment_details" >
    </TextView>
    <LinearLayout
        android:id="@+id/Payment_Icons_LAY"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/PaymentTitle_TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="@dimen/_20sp"
        android:weightSum="5"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/Payment_Paypal_IMG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pay_paypal"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/Payment_Visa_IMG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pay_visa"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/Payment_Master_IMG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pay_mastercard"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/Payment_Dinners_IMG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pay_dinners"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/Payment_Amex_IMG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pay_amex"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Payment_form_ll"
        app:layout_constraintTop_toBottomOf="@id/Payment_Icons_LAY" >
        <TextView
            android:id="@+id/Payment_username_tv"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            style="@style/txtMontserratromanregular14"
            android:text="@string/cardholder_name"/>
        <EditText
            android:background="@drawable/rectangle_bg_white_a700_border_gray_600_radius_10"
            android:id="@+id/Payment_cardholder_ET"
            android:layout_marginBottom="18dp"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_14pxv"
            android:paddingEnd="@dimen/_25pxh"
            android:paddingStart="@dimen/_21pxh"
            android:paddingTop="@dimen/_14pxv"
            android:singleLine="true"
            android:textColorHint="@color/black_900_cc"
            style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>
        <TextView
            android:id="@+id/Payment_number_TV"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            style="@style/txtMontserratromanregular14"
            android:text="@string/card_number"/>

        <EditText
            android:background="@drawable/rectangle_bg_white_a700_border_gray_600_radius_10"
            android:layout_marginBottom="18dp"
            android:id="@+id/Payment_number_ET"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_14pxv"
            android:paddingEnd="@dimen/_25pxh"
            android:paddingStart="@dimen/_21pxh"
            android:paddingTop="@dimen/_14pxv"
            android:singleLine="true"
            android:textColorHint="@color/black_900_cc"
            style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>

        <LinearLayout
            android:id="@+id/Payment_Expire_LAY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/PaymentTitle_TV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_marginHorizontal="30dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">

            <LinearLayout
                android:id="@+id/Payment_Expire_Left_LAY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="5dp">
                <TextView
                    android:id="@+id/Payment_Exp_Mon_TV"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    style="@style/txtMontserratromanregular14"
                    android:text="@string/exp_month"/>
                <Spinner
                    android:id="@+id/Payment_Exp_Mon_Spinner_ET"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_bg_white_a700_border_gray_600_radius_10"
                    android:autofillHints="creditCardExpirationMonth"
                    android:paddingEnd="@dimen/_25pxh"
                    android:paddingStart="@dimen/_21pxh"
                    android:layout_marginTop="@dimen/_8pxv" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Payment_Expire_Right_LAY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/Payment_Exp_Year_TV"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    style="@style/txtMontserratromanregular14"
                    android:text="@string/exp_year"/>
                <Spinner
                    android:id="@+id/Payment_Exp_Year_Spinner_ET"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_bg_white_a700_border_gray_600_radius_10"
                    android:autofillHints="creditCardExpirationYear"
                    android:paddingEnd="@dimen/_25pxh"
                    android:paddingStart="@dimen/_21pxh"
                    android:layout_marginTop="@dimen/_8pxv" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Payment_CVC_LAY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/PaymentTitle_TV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_marginHorizontal="30dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/Payment_Cvc_Left_LAY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="5dp">
                <TextView
                    android:id="@+id/Payment_Cvc_Mon_TV"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    style="@style/txtMontserratromanregular14"
                    android:text="@string/cvc"/>
                <EditText
                    android:background="@drawable/rectangle_bg_white_a700_border_gray_600_radius_10"
                    android:id="@+id/Payment_Cvc_ET"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:textColorHint="@color/black_900_cc"
                    style="@style/etSolidRoundedOutline"
                    android:paddingBottom="@dimen/_14pxv"
                    android:paddingEnd="@dimen/_25pxh"
                    android:paddingStart="@dimen/_21pxh"
                    android:paddingTop="@dimen/_14pxv"
                    android:layout_marginTop="@dimen/_8pxv"
                    tools:ignore="Autofill"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Payment_Cvc_Right_LAY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/Payment_Cvc_None_TV"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    style="@style/txtMontserratromanregular14"/>
                <TextView
                    android:id="@+id/Payment_Cvc_TV"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center|start"
                    android:paddingEnd="@dimen/_5pxh"
                    android:paddingStart="@dimen/_5pxh"
                    style="@style/txtlightGray12"
                    android:text="@string/_3_or_4_digits_usually_found_on_the_signature_strip"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Payment_Terms_LAY"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="18dp" >

            <TextView
                android:id="@+id/Payment_Terms1_TV"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:textStyle="italic"
                style="@style/txtMontserratromanregular14Black"
                android:text="@string/by_continuing_you_agree_to_our"/>
            <TextView
                android:id="@+id/Payment_Terms2_TV"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:textStyle="italic"
                android:paddingHorizontal="@dimen/_5sp"
                style="@style/txtMontserratromanregular14Ul"
                android:text="@string/terms" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:gravity="center"
            android:id="@+id/editprofile_edit_btn"
            android:layout_marginHorizontal="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_18pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_18pxv"
            android:singleLine="true"
            style="@style/btnSolidRounded"
            android:text="@string/buy"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>