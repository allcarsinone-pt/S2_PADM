<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginActivity"
    android:id="@+id/linearLoginPainelStands"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/img_group_2"
    android:orientation="vertical" style="@style/groupStylewhite_A700">

    <LinearLayout android:id="@+id/linearColumnasset3one"
        android:layout_gravity="top|center"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_27pxh"
        android:layout_marginStart="@dimen/_27pxh"
        android:layout_marginTop="@dimen/_39pxv"
        android:layout_width="match_parent" android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView android:id="@+id/imageSteeringwheel"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_117pxh"
                        android:layout_marginTop="150dp"
                        android:layout_width="@dimen/_117pxh"
                        android:src="@drawable/img_steering_wheel_1"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_steering_wheel_1"/>
                    <TextView android:gravity="center"
                        android:id="@+id/txtWelcome"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_37pxv"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@string/msg_recover_password"
                        style="@style/txtMontserratromanmedium24"/>

                    <LinearLayout android:gravity="start"
                        android:id="@+id/linearColumnpassword"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_100pxv"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:paddingEnd="@dimen/_1pxh" android:paddingStart="@dimen/_1pxh">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtEmail"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_1pxh"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:text="@string/lbl_email"
                            style="@style/txtMontserratromanregular14"/>
                        <EditText
                            android:background="@drawable/rectangle_bg_white_a700_border_gray_600_radius_10"
                            android:drawableEnd="@drawable/drawable_img_group_6"
                            android:drawablePadding="@dimen/_23pxh"

                            android:id="@+id/etEmail"
                            android:inputType="textEmailAddress"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:layout_width="match_parent"
                            android:paddingBottom="@dimen/_14pxv"
                            android:paddingEnd="@dimen/_25pxh"
                            android:paddingStart="@dimen/_21pxh"
                            android:paddingTop="@dimen/_14pxv"
                            android:singleLine="true"
                            tools:text="email@allcarsinone.pt"

                            style="@style/etSolidRoundedOutline_1" tools:ignore="Autofill"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end" android:gravity="center"
                        android:id="@+id/btnRecoverPassword"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_31pxv"
                        android:layout_width="match_parent"
                        android:paddingBottom="@dimen/_18pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_30pxh"
                        android:paddingTop="@dimen/_18pxv"
                        android:singleLine="true"
                        android:text="@string/msg_recover_password"
                        android:textAllCaps="false"
                        style="@style/btnSolidRounded" tools:text="@string/msg_recover_password"/>
                    <LinearLayout
                        android:id="@+id/linearSignIn"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:paddingBottom="60dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txtSignIn"
                            android:layout_gravity="center"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:text="@string/msg_sign_in"
                            style="@style/txtMontserratromanmedium14"/>
                    </LinearLayout>
                </LinearLayout>


            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

