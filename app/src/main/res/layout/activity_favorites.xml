<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.FavoritesActivity">

    <RelativeLayout
        android:id="@+id/favorites_toolbar_rl"
        android:paddingTop="@dimen/_30sp"
        android:paddingHorizontal="@dimen/_30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageButton
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/backbutton"
            android:id="@+id/favorites_backbutton_btn"
            android:background="@drawable/circle_button"
            android:layout_marginTop="20dp" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/logo_cropped" />
    </RelativeLayout>

    <TextView
        android:id="@+id/favorites_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorites"
        app:layout_constraintTop_toBottomOf="@id/favorites_toolbar_rl"
        app:layout_constraintBottom_toTopOf="@id/favoritesVehicles_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserratromanmedium">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/favoritesVehicles_ll"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/favorites_tv">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/favorites_list1_cl"
            android:layout_marginTop="@dimen/_20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/favorites_tv">
            <androidx.cardview.widget.CardView
                android:id="@+id/favorites1_cv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:elevation="1dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="30dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/favorites1_iv"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ferrari"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/favorites1_iv"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:text="Ferrari 458 Italia"
                            android:textStyle="bold"
                            android:textColor="@color/darkBlue"
                            android:fontFamily="@font/montserratromanmedium"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="1dp"
                            android:text="100.000â‚¬"
                            android:textStyle="bold"
                            android:textColor="@color/darkBlue"
                            android:fontFamily="@font/montserratromanmedium"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="20dp"
                            android:paddingRight="24dp">
                            <TextView
                                android:id="@+id/location_fav1_tv"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Porto"
                                android:textColor="@color/darkBlue"
                                android:drawableLeft="@drawable/locationdark"
                                android:drawablePadding="5dp"
                                android:fontFamily="@font/montserratromanlight"
                                />
                            <ImageButton
                                android:paddingLeft="25dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/cart"
                                android:background="@android:color/transparent"
                                />
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/heart_filled"
                                android:background="@android:color/transparent"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>