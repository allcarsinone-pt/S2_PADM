<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/whitebg"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/labelLoginWelcome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:text="Welcome"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:layout_marginHorizontal="40dp"
            />

        <TextView
            android:id="@+id/labelLoginSlogan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:text="Want a brand new vehicle?"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:layout_marginHorizontal="40dp"
            />

        <TextView
            android:id="@+id/labelLoginUsername"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="text"
            android:text="Password"
            android:textColor="@color/red"
            android:layout_marginHorizontal="40dp"
            />

        <EditText
            android:id="@+id/loginUsername"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="20dp"
            android:ems="100"
            android:background="@drawable/border"
            />

        <TextView
            android:id="@+id/labelLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="text"
            android:text="Password"
            android:textColor="@color/red"
            android:layout_marginHorizontal="40dp"
            />

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:layout_marginHorizontal="40dp"
            android:ems="100"
            android:background="@drawable/border"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/loginSubmit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Login"
            android:tag="7"
            android:onClick="onClickBtn"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/buttons"
            />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:weightSum="2"
            >

            <TextView
                android:id="@+id/labelLoginForgotPass"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:ems="10"
                android:inputType="text"
                android:text="Welcome"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginHorizontal="40dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/labelLoginForgotCreateAccount"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:ems="10"
                android:inputType="text"
                android:text="Create new account"
                android:textSize="14sp"
                android:textColor="@color/red"
                android:layout_marginHorizontal="40dp"
                android:layout_weight="1"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>